import pandas as pd
import seaborn as sns
import matplotlib.pyplot as plt

df = pd.read_csv('../data/clean_streaming_history.csv')

# Top artists
top_artists = df['artist'].value_counts().head(10)

plt.figure(figsize=(10,5))
sns.barplot(x=top_artists.values, y=top_artists.index, palette='viridis')
plt.title('Top 10 Artists')
plt.xlabel('Play Count')
plt.ylabel('Artist')
plt.tight_layout()
plt.show()

# Listening by hour
plt.figure(figsize=(10,5))
sns.countplot(data=df, x='hour', palette='magma')
plt.title('Listening Activity by Hour')
plt.tight_layout()
plt.show()

# Heatmap: hour vs weekday
pivot = df.pivot_table(index='weekday', columns='hour', values='track', aggfunc='count')

plt.figure(figsize=(12,6))
sns.heatmap(pivot, cmap='coolwarm')
plt.title('Listening Heatmap (Weekday vs Hour)')
plt.tight_layout()
plt.show()
