import pandas as pd
import json

# Load raw Spotify streaming history
with open('../data/StreamingHistory0.json', 'r') as f:
    raw = json.load(f)

df = pd.DataFrame(raw)

# Convert timestamps
df['endTime'] = pd.to_datetime(df['endTime'])
df['date'] = df['endTime'].dt.date
df['hour'] = df['endTime'].dt.hour
df['weekday'] = df['endTime'].dt.day_name()
df['month'] = df['endTime'].dt.month_name()

# Clean column names
df.rename(columns={
    'artistName': 'artist',
    'trackName': 'track',
    'msPlayed': 'ms_played'
}, inplace=True)

# Filter out very short plays (< 5 seconds)
df = df[df['ms_played'] > 5000]

df.to_csv('../data/clean_streaming_history.csv', index=False)

