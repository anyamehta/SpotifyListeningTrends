import pandas as pd
import seaborn as sns
import matplotlib.pyplot as plt

df = pd.read_csv('../data/clean_streaming_history.csv')
features = pd.read_csv('../data/audio_features.csv')

# Merge on track + artist
merged = pd.merge(df, features, on=['track', 'artist'], how='inner')

# Mood distribution
plt.figure(figsize=(10,5))
sns.histplot(merged['valence'], bins=20, kde=True, color='green')
plt.title('Distribution of Song Mood (Valence)')
plt.xlabel('Valence (0 = sad, 1 = happy)')
plt.tight_layout()
plt.show()

# Energy vs Danceability
plt.figure(figsize=(8,6))
sns.scatterplot(data=merged, x='energy', y='danceability', alpha=0.6)
plt.title('Energy vs Danceability')
plt.tight_layout()
plt.show()
